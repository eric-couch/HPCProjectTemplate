@page "/todo"

<h3>Todo (@todos.Count(todo => !todo.IsDone))</h3>

<ul>
    @foreach (var todo in todos)
    {
        <li>
            <input type="checkbox" @bind="todo.IsDone" />"
            @todo.Title
            </li>
    }
</ul>

<input type="text" placeholder="something to do" @bind="newTodo" />
<button @onclick="AddTodo">Add todo</button>