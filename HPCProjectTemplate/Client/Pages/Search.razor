@page "/search"
@using HPCProjectTemplate.Shared;

<label>Search</label>
<div class="container-fluid mb-5">
    <div class="row">
        <div class="col-2">
            <InputText @bind-Value="SearchTitle" />
        </div>
        <div class="col-1">
            <button type="submit" @onclick="SearchOMDB">submit</button>
        </div>
        <div class="col-9"></div>
    </div>
</div>

@if (movieSearchResult is not null)
{
    <ul>
    @foreach(MovieSearchResultItem movie in movieSearchResult.Search)
    {
        <li>@movie.Title (@movie.Year)</li>
    }
    </ul>
}

